<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="cs465.lendr.SettingActivity">


    <!--everything from start to the last EditText is inside relative layout-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp">
        <!--component for enter online id -->

        <TextView
            android:id="@+id/CurrentLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Your current location:"
            />
        <!--component for enter password -->
        <EditText
            android:id="@+id/Location"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="10dp"
            android:textSize="15dp"
            android:text="1000 W Main St Room101"
            android:background="@android:color/transparent"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:layout_below="@+id/CurrentLocation"
            />


        <TextView
            android:id="@+id/CurrentPhoneNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/Location"
            android:layout_marginTop="10dp"
            android:textSize="20dp"
            android:text="Your phone number:"
            />
        <!--component for enter password -->
        <EditText
            android:id="@+id/PhoneNumber"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="10dp"
            android:textSize="15dp"
            android:text="217-123-4567"
            android:background="@android:color/transparent"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:layout_below="@+id/CurrentPhoneNumber"
            />


        <TextView
            android:id="@+id/CurrentPayment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/PhoneNumber"
            android:layout_marginTop="0dp"
            android:textSize="20dp"
            android:text="Payment:"
            />

        <TextView
            android:id="@+id/Card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/CurrentPayment"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="0dp"

            android:textSize="17dp"
            android:text="Card:"
            />

        <EditText
            android:id="@+id/CardNumber"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="10dp"
            android:textSize="15dp"
            android:text="4430-xxxx-xxxx-xxxx"
            android:background="@android:color/transparent"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:layout_below="@+id/Card"
            />


        <TextView
            android:id="@+id/NameOnCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/CardNumber"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="10dp"
            android:textSize="17dp"
            android:text="Name On Card:"

            />

        <EditText
            android:id="@+id/Name"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="10dp"
            android:textSize="15dp"
            android:text="Sam Okrent"
            android:background="@android:color/transparent"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:layout_below="@+id/NameOnCard"
            />

        <TextView
            android:id="@+id/BillingAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/Name"
            android:textSize="17dp"
            android:text="Billing Address:"

            />

        <EditText
            android:id="@+id/BillingAddress2"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="10dp"
            android:textSize="15dp"
            android:text="1000 W Main St Room101"
            android:background="@android:color/transparent"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:layout_below="@+id/BillingAddress"
            />


        <TextView
            android:id="@+id/DeliverySetting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/BillingAddress2"
            android:layout_marginTop="0dp"
            android:textSize="20dp"
            android:text="Delivery Setting:"
            />

        <EditText
            android:id="@+id/DeliverySetting2"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="10dp"
            android:textSize="15dp"
            android:text="2 Day Delivery"
            android:background="@android:color/transparent"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:layout_below="@+id/DeliverySetting"
            />

        <cs465.lendr.EditButton
            android:id="@+id/EditButton1"
            android:text="Edit"
            android:textSize="10dp"
            android:layout_width="120dp"
            android:layout_height="28dp"
            android:layout_marginTop="30dp"
            android:textColor="#FFFFFF"
            android:layout_centerHorizontal="true"
            android:background="#c6d166"
            android:layout_below="@id/DeliverySetting2"
            />

        <Button
            android:layout_width="120dp"
            android:layout_height="28dp"
            android:text = "End Subscription"
            android:textSize="10dp"
            android:textColor="#FFFFFF"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="#9B4F0F"
            android:layout_below="@id/EditButton1"
            android:enabled="true"
            />

    </RelativeLayout>
</LinearLayout>

</ScrollView>


