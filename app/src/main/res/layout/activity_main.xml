<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="cs465.lendr.MainActivity">

    <!--everything from start to the last EditText is inside relative layout-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="5dp">
        <!--component for enter online id -->

        <TextView
            android:id="@+id/CurrentLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Your current location:"
            />
        <!--component for enter password -->
        <EditText
            android:id="@+id/Location"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="10dp"
            android:textSize="15dp"
            android:text="1000 W Main St Room101"
            android:background="@android:color/transparent"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:layout_below="@+id/CurrentLocation"
            />

        <!--component for checkbox next to password-->
        <Button
            android:id="@+id/button1"
            android:text="Edit"
            android:textSize="10dp"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_toRightOf="@id/Location"
            android:layout_marginRight="10dp"
            android:layout_below="@+id/CurrentLocation"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="5dp">
        <!--component for enter online id -->

        <TextView
            android:id="@+id/CurrentPhoneNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Your phone number:"
            />
        <!--component for enter password -->
        <EditText
            android:id="@+id/PhoneNumber"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="10dp"
            android:textSize="15dp"
            android:text="217-123-4567"
            android:background="@android:color/transparent"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:layout_below="@+id/CurrentPhoneNumber"
            />

        <!--component for checkbox next to password-->
        <Button
            android:id="@+id/button2"
            android:text="Edit"
            android:textSize="10dp"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_toRightOf="@id/PhoneNumber"
            android:layout_marginRight="10dp"
            android:layout_below="@+id/CurrentPhoneNumber"
            />

    </RelativeLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_marginTop="15dp">
        <!--component for enter online id -->

        <TextView
            android:id="@+id/CurrentPayment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Payment:"
            />

        <TextView
            android:id="@+id/Card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/CurrentPayment"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="10dp"

            android:textSize="17dp"
            android:text="Card:"
            />

        <EditText
            android:id="@+id/CardNumber"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="10dp"
            android:textSize="15dp"
            android:text="4430-xxxx-xxxx-xxxx"
            android:background="@android:color/transparent"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:layout_below="@+id/Card"
            />

        <!--component for checkbox next to password-->
        <Button
            android:id="@+id/button3"
            android:text="Edit"
            android:textSize="10dp"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_toRightOf="@id/CardNumber"
            android:layout_marginRight="10dp"
            android:layout_below="@+id/Card"
            />

        <TextView
            android:id="@+id/NameOnCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/CardNumber"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="10dp"
            android:textSize="17dp"
            android:text="Name On Card:"

            />

        <EditText
            android:id="@+id/Name"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="10dp"
            android:textSize="15dp"
            android:text="Sam Okrent"
            android:background="@android:color/transparent"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:layout_below="@+id/NameOnCard"
            />

        <!--component for checkbox next to password-->
        <Button
            android:id="@+id/button4"
            android:text="Edit"
            android:textSize="10dp"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_toRightOf="@id/Name"
            android:layout_marginRight="10dp"
            android:layout_below="@+id/NameOnCard"
            />

        <TextView
            android:id="@+id/BillingAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/Name"
            android:textSize="17dp"
            android:text="Billing Address:"

            />

        <EditText
            android:id="@+id/BillingAddress2"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="10dp"
            android:textSize="15dp"
            android:text="1000 W Main St Room101"
            android:background="@android:color/transparent"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:layout_below="@+id/BillingAddress"
            />

        <!--component for checkbox next to password-->
        <Button
            android:id="@+id/button5"
            android:text="Edit"
            android:textSize="10dp"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_toRightOf="@id/Name"
            android:layout_marginRight="10dp"
            android:layout_below="@+id/BillingAddress"
            />
    </RelativeLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="5dp">

        <TextView
            android:id="@+id/DeliverySetting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Delivery Setting:"
            />

        <EditText
            android:id="@+id/DeliverySetting2"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="10dp"
            android:textSize="15dp"
            android:text="2 Day Delivery"
            android:background="@android:color/transparent"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:layout_below="@+id/DeliverySetting"
            />

        <!--component for checkbox next to password-->
        <Button
            android:id="@+id/button6"
            android:text="Edit"
            android:textSize="10dp"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_toRightOf="@id/DeliverySetting2"
            android:layout_marginRight="10dp"
            android:layout_below="@+id/DeliverySetting"
            />

    </RelativeLayout>


</LinearLayout>


